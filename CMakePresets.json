{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug-gcc",
      "hidden": false,
      "description": "Linux debug configure preset using GCC.",
      "binaryDir": "${sourceDir}/build/debug/linux-gcc",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug-clang",
      "hidden": false,
      "description": "macOS debug configure preset using Clang.",
      "binaryDir": "${sourceDir}/build/debug/macos-clang",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-osx",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug-msvc",
      "hidden": false,
      "description": "Windows debug configure preset using MSVC.",
      "binaryDir": "${sourceDir}/build/debug/windows-msvc",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        }
      }
    },
    {
      "name": "release-msvc",
      "hidden": false,
      "description": "Windows release configure preset using MSVC.",
      "binaryDir": "${sourceDir}/build/release/windows-msvc",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug-gcc-x64",
      "configurePreset": "debug-gcc",
      "description": "Linux debug build using GCC."
    },
    {
      "name": "macos-debug-clang-arm64-osx",
      "configurePreset": "debug-clang",
      "description": "macOS debug build using Clang."
    },
    {
      "name": "windows-debug-msvc-x64",
      "configurePreset": "debug-msvc",
      "description": "Windows debug build using MSVC."
    },
    {
      "name": "windows-release-msvc-x64",
      "configurePreset": "release-msvc",
      "description": "Windows release build using MSVC."
    }
  ]
}